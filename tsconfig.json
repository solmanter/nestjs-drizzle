{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es7",
      "es6"
    ],
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}